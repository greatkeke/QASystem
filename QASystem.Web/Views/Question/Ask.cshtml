@model QASystem.Web.Models.QuestionViewModel
@{
    ViewBag.Title = "提问";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row"><h1>一个深思熟虑过的问题，会得到良好的响应。</h1></div>
    @using (Html.BeginForm("New", "Question", FormMethod.Post, new { @class = "bs-example bs-example-form", role = "form" }))
    {
        @Html.HiddenFor(u => u.StartTime)
        @Html.HiddenFor(u => u.AuthorId)
        <div class="row">
            <div class="col-sm-12 input-group">
                <span class="input-group-addon">标题</span>
                @Html.TextBoxFor(u => u.Title, new { name = "title", @class = "form-control", placeholder = "简明扼要" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-6 input-group">
                <span class="input-group-addon">主题</span>
                <div class="form-group">
                    @Html.DropDownList("subjectId", (IEnumerable<SelectListItem>)ViewBag.SubjectItems, new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="col-sm-6 input-group">
                <span class="input-group-addon">话题</span>
                @*todo:根据输入自动匹配话题*@
                @Html.TextBoxFor(u => u.TopicName, new { name = "TopicName", @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="row">
            <!-- 加载编辑器的容器 -->
            @Html.ScriptFor("content", "详细内容")
        </div>
        <br />
        <input class="form-control" type="submit" value="保存" />
    }
</div>

<!-- 配置文件 -->
<script type="text/javascript" src="~/UEditor/ueditor.config.js"></script>
<!-- 编辑器源码文件 -->
<script type="text/javascript" src="~/UEditor/ueditor.all.min.js"></script>
<!-- 实例化编辑器 -->
<script type="text/javascript">
    var ue = UE.getEditor('container', {
        autoHeight: true
    });
</script>

