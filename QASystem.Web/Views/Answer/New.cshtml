@model QASystem.Web.Models.AnswerViewModel
@{
    if (Model != null)
    {
        <div class="row">
            <div class="col-sm-2">@Html.Label(Model.AuthorName)</div>
            <div class="col-sm-2">@Html.Label(Model.CreateTime.ToString())</div>
        </div>
        <div class="row">
            @Html.Raw(Model.Content)
        </div>
    }
    else
    {
        <div class="row">sorry,提交失败，请重试~</div>
    }
}
<hr />
